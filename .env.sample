# Celery / RabbitMQ (local via Docker below; production via CloudAMQP)
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//

# Email (local: console backend; production: real SMTP)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=reminders@example.com

# Security/Proxy (set in prod)
CSRF_TRUSTED_ORIGINS=
